<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance">
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="TextAppearance.Large" parent="TextAppearance">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="TextAppearance.ExtraLarge" parent="TextAppearance">
        <item name="android:textSize">42dp</item>
    </style>

</resources>
